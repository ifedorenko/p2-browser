<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.ifedorenko.p2browser.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="com.ifedorenko.p2browser.Perspective"
            id="com.ifedorenko.p2browser.perspective"
            name="P2 Browser">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="true"
            class="com.ifedorenko.p2browser.views.MetadataRepositoryView"
            id="com.ifedorenko.p2browser.views.MetadataRepositoryView"
            name="P2 Repository">
      </view>
      <view
            allowMultiple="true"
            class="com.ifedorenko.p2browser.views.InstallableUnitView"
            id="com.ifedorenko.p2browser.views.InstallableUnitView"
            name="IU">
      </view>
      <view
            allowMultiple="true"
            class="com.ifedorenko.p2browser.views.DependencyHierarchyView"
            id="com.ifedorenko.p2browser.views.DependencyHierarchyView"
            name="Included IUs">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               id="com.ifedorenko.p2browser.views.MetadataRepositoryView"
               minimized="false"
               relationship="stack"
               relative="org.eclipse.ui.editors"
               standalone="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         id="p2browser"
         point="org.eclipse.core.runtime.products">
      <product
            application="com.ifedorenko.p2browser.application"
            name="P2 Browser">
         <property
               name="appName"
               value="P2 Browser">
         </property>
      </product>
   </extension>

</plugin>
